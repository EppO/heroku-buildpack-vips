#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

echo "-----> Installing libvips like a boss"

# change to the the BUILD_DIR ($1)
cd $1

sudo apt-get -y install libvips-dev
echo "libvips installed" | indent
